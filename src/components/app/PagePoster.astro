---
const { poster } = Astro.props
---
<div class="pageBackgroundPoster" aria-hidden="true">
  <img src={ poster } alt="Poster" class="pageBackgroundPoster__image" >
</div>

<style>
.pageBackgroundPoster {
  position: absolute;
  top: 0;
  left: 0;
  width: calc(100cqw + var(--cn-gap) * 2);
  z-index: -1;
  overflow: hidden;
  margin-top: calc(var(--cn-app-bar-height) * -1 - var(--cn-grid));
  opacity: 0.72
}
.pageBackgroundPoster__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.88;
}
.pageBackgroundPoster::before {
  content: '';
  position: absolute;
  z-index: 3;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    180deg, 
    hsla(var(--chroma-primary-20-hsl), 0.22) 40%,
    hsla(var(--chroma-primary-70-hsl), 0.44) 60%,
    hsla(var(--chroma-primary-90-hsl), 0.66) 80%, 
    var(--color-primary));
  opacity: 1;
}
</style>