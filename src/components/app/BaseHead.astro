---
import '@11thdeg/cyan-next/dist/style.css'
import '../../overrides.css'

const { title, poster, description } = Astro.props

const pageTitle = title ? `${title} – Pelilauta 2` : 'Pelilauta 2'
const socialMediaImage = poster ? poster : Astro.url.origin + '/images/juno-viinikka-dragon-1.webp'
const siteDescription = description ? description : 'Roolipeliwikit, sivustot ja keskustelut. Pelilauta 2 on suomalainen roolipelaamisen yhteisösovellus harrastajilta harrastajille.'
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="generator" content={Astro.generator} />
  <meta name="theme-color" content="#efff42" />
  <link rel="canonical" href={Astro.url} />

  <title>{pageTitle}</title>
  <meta name="description" content={siteDescription} />

  <!-- Social Share -->
  <meta property="og:title" content={pageTitle}>
  <meta property="og:image" content={socialMediaImage}>


  <script>
    import '@11thdeg/cyan-next'
  </script>

  <!-- Google fonts for Cyan-->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Roboto+Mono:wght@500&display=swap"
    rel="stylesheet"
  />
  <!-- end Google fonts for Cyan-->
</head>
