{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@firebase/*": ["src/firebase/*"],
      "@schemas/*": ["src/schemas/*"],
      "@solid": ["src/components/solid"],
      "@utils/*": ["src/utils/*"],
    }
  }
  
}
